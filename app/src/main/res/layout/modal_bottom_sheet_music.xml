<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom_nav_background"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Фон с закругленными углами -->

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/profile_pic"
        android:layout_gravity="center"
        android:src="@drawable/music_image"
        android:elevation="32dp"
        android:outlineProvider="background"
        android:backgroundTint="@color/md_theme_scrim"
    app:shapeAppearanceOverlay="@style/CircleSongBigViewStyle" />

    <!-- Название песни -->
    <TextView
        android:id="@+id/songTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/saira_var"
        android:gravity="center"
        android:text="Snowfall"
        android:textColor="@color/md_theme_scrim"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Исполнитель -->
    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/saira_var"
        android:gravity="center"
        android:text="Oneheart, reidenshi"
        android:textColor="@color/md_theme_scrim"
        android:textSize="16sp" />


    <!-- Прогресс воспроизведения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/md_theme_scrim"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/md_theme_scrim"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:45"
                android:textColor="@color/md_theme_scrim"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/iconButton"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_skip_prev"

            />

        <Button
            android:id="@+id/playButton"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            app:icon="@drawable/ic_play" />

        <Button
            android:id="@+id/nextButton"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_skip_next" />
    </LinearLayout>

</LinearLayout>