<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной фон -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FCD6EA" /> <!-- Цвет по умолчанию -->
            <corners android:radius="24dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
    <!-- Прогресс -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FAA2D2" /> <!-- Цвет прогресса -->
                <corners android:radius="24dp" /> <!-- Закругленные углы -->
            </shape>
        </clip>
    </item>
</layer-list>